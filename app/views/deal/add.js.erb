var random_area = document.getElementById("random_nums");
var deal_area = document.getElementById("deal_num");
var button_random = document.createElement("button");
button_random.className = "btn-number-deal";
var random_val = document.createTextNode("<%= escape_javascript(render plain: @deal[:deal].last) %>");
button_random.appendChild(random_val);
random_area.appendChild(button_random);
deal_area.innerHTML = "<button class='btn-number-deal'><%= escape_javascript(render plain: @deal[:deal].last) %></button>";

var btnDeal = document.getElementById("deal_btn");
var endStatus = document.getElementById("end_status");
if("<%= escape_javascript(render plain: @deal[:deal].length) %>" == "75"){
	btnDeal.disabled = true;
	endStatus.innerHTML = "Game had dealed all of 75 numbers. The end !!!";
}